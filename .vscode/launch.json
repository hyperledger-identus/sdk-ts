{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha All",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "-r",
        "ts-node/register",
        "--timeout",
        "999999",
        "--colors",
        "${workspaceFolder}/tests/**/*.ts"
      ],
      "env": {
        "TS_NODE_COMPILER_OPTIONS": "{\"module\": \"commonjs\" }"
      }
    }
  ]
}
