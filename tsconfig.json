{
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "module": "esnext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "declarationMap": false,
    "types": []
  },
  "include": ["."],
  "exclude": ["node_modules", "build", "rollup", "examples", "lib"],
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}
